<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shortener</title>
    <style>
        /* Global Styling */
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f4f4f9;
            color: #333;
            text-align: center;
            margin: 0;
            padding: 0;
            transition: background-color 0.3s, color 0.3s;
        }

        h1 {
            margin-top: 20px;
            color: #007bff;
        }

        /* Dark Mode Styling */
        body.dark-mode {
            background-color: #121212;
            color: #f4f4f9;
        }

        body.dark-mode h1 {
            color: #4da3ff;
        }

        /* Toggle Button */
        .toggle-container {
            position: absolute;
            top: 15px;
            right: 20px;
        }

        .toggle-btn {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 10px 15px;
            border-radius: 20px;
            cursor: pointer;
            font-size: 14px;
            transition: background 0.3s;
        }

        .toggle-btn:hover {
            background-color: #0056b3;
        }

        /* Dark Mode Toggle Button */
        .dark-mode .toggle-btn {
            background-color: #f4f4f9;
            color: #333;
        }

        /* Form Styling */
        form {
            background: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            display: inline-block;
            margin: 20px auto;
            width: 50%;
            transition: background 0.3s;
        }

        body.dark-mode form {
            background: #222;
            color: white;
            box-shadow: 0px 0px 10px rgba(255, 255, 255, 0.1);
        }

        label {
            font-size: 18px;
            font-weight: bold;
        }

        input[type="text"] {
            width: 100%;
            padding: 10px;
            margin-top: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 16px;
            transition: background 0.3s, color 0.3s;
        }

        body.dark-mode input[type="text"] {
            background: #333;
            color: white;
            border: 1px solid #555;
        }

        button {
            background-color: #007bff;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            margin-top: 10px;
            transition: background 0.3s;
        }

        button:hover {
            background-color: #0056b3;
        }

        /* Table Styling */
        table {
            width: 80%;
            margin: 20px auto;
            border-collapse: collapse;
            background: white;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            transition: background 0.3s;
        }

        body.dark-mode table {
            background: #222;
            color: white;
            box-shadow: 0px 0px 10px rgba(255, 255, 255, 0.1);
        }

        th, td {
            padding: 12px;
            border-bottom: 1px solid #ddd;
        }

        body.dark-mode th, body.dark-mode td {
            border-bottom: 1px solid #555;
        }

        th {
            background-color: #007bff;
            color: white;
        }

        body.dark-mode th {
            background-color: #4da3ff;
        }

        tr:hover {
            background-color: #f1f1f1;
        }

        body.dark-mode tr:hover {
            background-color: #333;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            form {
                width: 90%;
            }

            table {
                width: 100%;
            }
        }
    </style>
</head>
<body>

    <!-- Dark Mode Toggle Button -->
    <div class="toggle-container">
        <button class="toggle-btn" onclick="toggleDarkMode()">üåô Dark Mode</button>
    </div>

    <h1>URL Shortener</h1>

    <% if (locals.id) { %>
        <p style="font-size: 18px; font-weight: bold; color: #28a745;">
            URL Generated: <a href="http://localhost:8001/<%= id %>" target="_blank">
                http://localhost:8001/<%= id %>
            </a>
        </p>
    <% } %>

    <div>
        <form method="post" action="/url">
            <label>Enter Your Original URL</label>
            <input type="text" name="url" placeholder="https://google.com" required>
            <button type="submit">Generate</button>
        </form>
    </div>

    <% if (locals.urls && locals.urls.length > 0) { %>
        <table>
            <thead>
                <tr>
                    <th>S.NO</th>
                    <th>Short ID</th>
                    <th>Redirect URL</th>
                    <th>Clicks</th>
                </tr>
            </thead>
            <tbody>
                <% urls.forEach((url, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= url.shortId %></td>
                        <td><a href="<%= url.redirectURL %>" target="_blank"><%= url.redirectURL %></a></td>
                        <td><%= url.visitHistory %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <p style="font-size: 16px; color: #777;">No URLs have been shortened yet.</p>
    <% } %>

    <script>
        // Function to toggle dark mode
        function toggleDarkMode() {
            document.body.classList.toggle("dark-mode");
            const isDarkMode = document.body.classList.contains("dark-mode");

            // Store user preference in localStorage
            localStorage.setItem("darkMode", isDarkMode);

            // Update button text
            document.querySelector(".toggle-btn").textContent = isDarkMode ? "‚òÄÔ∏è Light Mode" : "üåô Dark Mode";
        }

        // Check user preference on page load
        window.onload = function() {
            if (localStorage.getItem("darkMode") === "true") {
                document.body.classList.add("dark-mode");
                document.querySelector(".toggle-btn").textContent = "‚òÄÔ∏è Light Mode";
            }
        };
    </script>

</body>
</html>
